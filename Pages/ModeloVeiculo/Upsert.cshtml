@page
@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers

@model FrotiX.Pages.ModeloVeiculo.UpsertModel

@{  ViewData["Title"] = "Modelos de Veículos";
    ViewData["PageName"] = "modeloveiculo_index";
    ViewData["Heading"] = "<i class='fad fa-car-garage'></i> Cadastros: <span class='fw-300'>Modelos de Veículos</span>";
    ViewData["Category1"] = "Cadastros";
    ViewData["PageIcon"] = "fa-regular fa-car-garage";
 }

<style>
    .form-control-xs {
        height: calc(1em + .775rem + 2px) !important;
        padding: .125rem .25rem !important;
        font-size: .75rem !important;
        line-height: 1.5;
        border-radius: .2rem;
    }

    .label {
        margin-bottom: -5px;
        margin-top: 10px;
    }
</style>

@section HeadBlock {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
}


<form method="post" asp-action="Upsert">
    <div class="row">
        <div class="col-xl-12">
            <div id="panel-1" class="panel">
                <div class="panel-container show">
                    <div class="panel-content">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        @if (Model.ModeloVeiculoObj.ModeloId != Guid.Empty)
                        {
                            <input type="hidden" asp-for="ModeloVeiculoObj.ModeloVeiculo.ModeloId" />
                        }

                        <div class="col-12 px-3" style="border-bottom:1px solid #325d88">
                            <h2 class="text-primary">@(Model.ModeloVeiculoObj.ModeloVeiculo.ModeloId != Guid.Empty ? "Atualizar " : "Criar ") Modelo de Veículo  </h2>
                        </div>

                        <div class="col-8 pt-3">

                            <div class="row">
                                <div class="col-12">
                                    <div class="form-group">
                                        <label class="label font-weight-bold" asp-for="ModeloVeiculoObj.ModeloVeiculo.MarcaId"></label>
                                        <span class="text-danger font-weight-light" asp-validation-for="ModeloVeiculoObj.ModeloVeiculo.MarcaId"></span>
                                        @Html.DropDownListFor(m => m.ModeloVeiculoObj.ModeloVeiculo.MarcaId,
                                                                Model.ModeloVeiculoObj.MarcaList,
                                                                "- Selecione uma Marca -",
                                                                new { @class = "form-control form-control-xs" })
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <div class="form-group">
                                        <label class="label font-weight-bold" asp-for="ModeloVeiculoObj.ModeloVeiculo.DescricaoModelo"></label>
                                        <span class="text-danger font-weight-light" asp-validation-for="ModeloVeiculoObj.ModeloVeiculo.DescricaoModelo"></span>
                                        <input class="form-control form-control-xs" asp-for="ModeloVeiculoObj.ModeloVeiculo.DescricaoModelo" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <div class="form-group">
                                        <span class="text-danger text-light" asp-validation-for="ModeloVeiculoObj.ModeloVeiculo.Status"></span>
                                        <input type="checkbox" class="form-check-input" asp-for="ModeloVeiculoObj.ModeloVeiculo.Status" />
                                        <label class="font-weight-bold" asp-for="ModeloVeiculoObj.ModeloVeiculo.Status"></label>
                                    </div>
                                    <br />
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-9">
                                    <div class="row">
                                        <div class="col-6">
                                            @if (Model.ModeloVeiculoObj.ModeloVeiculo.ModeloId != Guid.Empty)
                                            {
                                                <button method="post" asp-page-handler="Edit" asp-route-id=@Model.ModeloVeiculoObj.ModeloVeiculo.ModeloId class="btn btn-primary form-control">Atualizar</button>
                                            }
                                            else
                                            {
                                                <button type="submit" value="Submit" asp-page-handler="Submit" class="btn btn-primary form-control">Criar</button>
                                            }

                                        </div>
                                        <div class="col-6">
                                            <a asp-page="./Index" class="btn btn-success form-control">Voltar à Lista</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section ScriptsBlock
{

    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>

}
